{
    "manifest_version": 3,
    "name": "X Unfollow Helper",
    "version": "1.2",
    "description": "自动点击X上的取消关注按钮",
    "permissions": ["activeTab", "storage", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.x.com/*"],
        "js": ["content.js"]
      }
    ]
  }